        {
            "label": "build-configure-local",
            "hide": true,
            "command": "cmake",
            "type": "shell",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B${workspaceFolder}/build-local"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiYellow"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "group": "build-execution"
            }
        },
        {
            "label": "build-configure-arm",
            "hide": true,
            "command": "DOCKER_HOST=",
            "type": "shell",
